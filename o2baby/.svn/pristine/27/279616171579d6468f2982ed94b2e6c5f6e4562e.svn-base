/* modal.wxss */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.modal {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2000;
  background: #fff;
  height: 600rpx;
}

.modal-header {
  margin-top: -5rpx;
  height: 100rpx;
  background-color: #c6d764;
  text-align: center;
  right: 0;
  z-index: 2000;
}

.modal-header .modal-title {
  text-align: center;
  padding-top: 26rpx;
  font-size: 34rpx;
  color: #fff;
}
.modal-foot{
  margin:30rpx 10%;
}

.btn-area {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  margin-top: 100rpx;
  font-size: 34rpx;
  color: #747474;
  padding:0 28rpx;
}

.modal-left {
  display: inline-block;
  flex: 1;
  width: 45%;
  margin-right:20rpx;
}

.unselect-btn {
  border-radius: 4rpx;
  border: solid 1px #c0c0c0;
  background-color: #fff;
  color: #747474;
  padding-top: 24rpx;
  height: 76rpx;
  text-align: center;
}

.select-btn {
  border-radius: 4rpx;
  border: solid 1px #c0c0c0;
  background-color: #c6d764;
  color: #fff;
  padding-top: 24rpx;
  height: 76rpx;
  text-align: center;
}

.modal-right {
  flex: 1;
  display: inline-block;
  width: 45%;
   margin-left:20rpx;
  text-align: center;
}

.modal-prop {
  margin-top: 120rpx;
  text-align: center;
  font-size: 22rpx;
  color: #878787;
}

.modal-confirm-btn {
  margin-top: 5%;
  width: 80%;
  margin-left: 10%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 200rpx;
  box-shadow: 0 6rpx 2rpx 2rpx rgba(244, 167, 153, 0.2);
  border: solid 2rpx #ffc250;
}

.right-color {
  font-size: 28rpx;
  color: #ffc250;
}

.modal-close {
  color: #fff;
  border-radius: 12px;
  line-height: 20px;
  text-align: center;
  height: 20px;
  width: 20px;
  font-size: 18px;
  padding: 1px;
  top: 25rpx;
  right: 10px;
  position: absolute;
}

/* use cross as close button */

.modal-close::before {
  content: "\2716";
}