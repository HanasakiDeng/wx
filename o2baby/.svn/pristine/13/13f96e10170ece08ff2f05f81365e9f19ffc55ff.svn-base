/* order-status.wxss */
@import "../order-detail/order-detail.wxss";
.bg-header {
  width: 100%;
  height: 28.5%;
  background-color: #c6d764;
  text-align: center;
  z-index: 10;
}

.time-text {
  padding-top: 8.8%;
  font-size: 24rpx;
  color: #fff;
}

.time-box {
  display: inline-block;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom:150rpx;
  font-size: 40rpx;
  color: #ffc250;
  width: 140px;
  height: 90rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 8rpx 0 rgba(158, 175, 61, 0.73);
}


.time-box .time-box-text {
  height: 56rpx;
  padding-top: 18rpx;
  padding-bottom: 100rpx;
}
.container-pd{
  margin-top:-140rpx;
}