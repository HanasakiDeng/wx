/* dialog.wxss */

.dialog-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.dialog {
  position: absolute;
  top: 50%;
  margin: auto 10%;
  margin-top: -25%;
  width: 80%;
  height: 292rpx;
  border-radius: 8rpx;
  background-color: #fff;
  align-items: center;
  z-index: 9999;
  color: #000;
}

.dialog .content {
  height: 190.6rpx;
  line-height: 190.6rpx;
  text-align: center;
  font-size: 36rpx;
  color: #000;
}

.dialog .dialog-btn-area {
  border-top: solid 1rpx #e5e5e5;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
}

.btn-confirm {
  flex: 1;
  height: 100.4rpx;
  line-height: 100.4rpx;
  border-right: 1rpx solid #e5e5e5;
  text-align: center;
  color: #c6d764;
}

.btn-cancel {
  flex: 1;
  display: inline-block;
  height: 100.4rpx;
  line-height: 100.4rpx;
  text-align: center;
  color: #2c2c2c;
}

.btn-confirm:active, .btn-cancel:active {
  opacity: 0.6;
}
