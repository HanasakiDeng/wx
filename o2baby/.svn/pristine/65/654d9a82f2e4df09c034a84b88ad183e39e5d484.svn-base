/* cart.wxss */
@import "../tpls/empty/empty.wxss";
@import "../tpls/cart-cell/cart-cell.wxss";

.container-pd {
  position: relative;
}

.foot {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 108rpx;
  line-height: 108rpx;
  background: #fff;
  text-align: right;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.ft-hd {
  flex: 1;
  align-self: flex-start;
}

.ft-bd {
  flex: 1;
}

.ft-ft {
  flex: 1;
  margin: auto 15rpx;
}
