@import '../pending/pending.wxss';

.title {
  font-size: 30rpx;
  color: #333;
}

.card-item-hd {
  flex: 1;
}

.card-item-bd {
  display: flex;
  justify-content: flex-end;
}

.test {
  font-size: 22rpx;
  color: #878787;
  font-weight: 600;
}

.modal-close {
  color: #fff;
  border-radius: 12px;
  line-height: 20px;
  text-align: center;
  height: 20px;
  width: 20px;
  font-size: 18px;
  padding: 1px;
  top: 25rpx;
  right: 10px;
  position: absolute;
}

/* use cross as close button */

.modal-close::before {
  content: "\2716";
}

.modal {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2000;
  background: #fff;
  height: 600rpx;
}

.modal-header {
  margin-top: -5rpx;
  height: 100rpx;
  background-color: #c6d764;
  text-align: center;
  right: 0;
  z-index: 2000;
}

.modal-header .modal-title {
  text-align: center;
  padding-top: 26rpx;
  font-size: 34rpx;
  color: #fff;
}

picker-view {
  width: 100%;
  height: 320rpx;
}

.picker-column {
  line-height: 64rpx;
  text-align: center;
}

.modal-foot {
  margin: 48rpx 10%;
  margin-bottom: -48rpx;
  text-align: center;
}
