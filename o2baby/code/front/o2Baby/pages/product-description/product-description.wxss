/* product-description.wxss */

page {
  background-color: #f6f6f6;
}

.font-size {
  font-size: 30rpx;
}

.card .card-desc {
  width: 100%;
  height: 699rpx;
  text-align: center;
}

.card-desc image {
  width: 100%;
  margin-top: 20%;
}

.list-container {
  margin: auto -28rpx;
  border-top: solid 1px #ececec;
}

.list-container {
  margin: auto -28rpx;
  border: solid 1px #ececec;
  border-left: none;
  border-right: none;
}

.list-item {
  margin: 26rpx 60rpx;
}

.list-desc {
  display: inline;
  font-size: 30rpx;
  color: #333;
}

.list-item-content {
  display: inline;
  font-size: 28rpx;
  color: #888;
  margin-left: 30rpx;
}

.foot {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 108rpx;
  background-color: #fff;
}

.btn-left {
  float: left;
  margin: 14rpx 26rpx;
  width: 130rpx;
  height: 80rpx;
  border: solid 1px #c6d764;
  background: url('../../../images/icon/shopping@3x.png');
  background-size: 48rpx 48rpx;
  background-repeat: no-repeat;
  background-clip: content-box;
  background-position: center center;
}

.btn-left:active, .btn-right:active {
  opacity: 0.6;
}

.btn-right {
  float: left;
  margin-top: 14rpx;
  width: 550rpx;
  border-radius: 0;
  height: 80rpx;
  background-color: #ffc352;
  color: #fff;
}
