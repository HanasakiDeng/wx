<!--product-description.wxml-->
<!--产品描述页面  -->
<view class="page">
  <view class="container-pd">
    <view class="card">
      <view class="card-desc">
        <image src="https://gd1.alicdn.com/imgextra/i1/270846493/TB2P1YGugJlpuFjSspjXXcT.pXa_!!270846493.jpg" mode="aspectFit"></image>
        <!-- <image src="{{productInfo.product_img}}"></image> -->
        <view>{{productInfo.description}}</view>
      </view>
      <view class="list-container">
        <view class="list-item border-bottom">
          <view class="list-desc font-size">气费:</view>
          <view class="list-item-content">{{productInfo.price}}</view>
        </view>
        <view class="list-item border-bottom">
          <view class="list-desc font-size">气瓶日租金:</view>
          <view class="list-item-content">{{productInfo.day_rent}}</view>
        </view>
        <view class="list-item">
          <view class="list-desc font-size">气瓶押金:</view>
          <view class="list-item-content">{{productInfo.product_guarantee}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="foot">
    <view class="btn-left">
      <view class="bg-view"></view>
    </view>
    <button class="btn-right">我要用氧</button>
  </view>
</view>
