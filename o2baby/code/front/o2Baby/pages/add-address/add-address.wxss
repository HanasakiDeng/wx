/* add-address.wxss */
@import '../tpls/toast/toast.wxss';

.form-box {
  padding: 0;
  background-color: #fff;
  box-shadow: 0 4rpx 8rpx 0 rgba(197, 211, 117, 0.35);
}

.form-item {
  margin-left: 3.7%;
  padding-left: 0;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
  vertical-align: middle;
  border-top: 2rpx solid #ececec;
}

.form-item-label {
  width: 105px;
  font-size: 30rpx;
  word-wrap: break-word;
  word-break: break-all;
}

.form-input {
  height: 2.58823529em;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}

.form-item:first {
  border: none;
}

.item-input {
  display: inline-block;
}

.placeholder {
  font-size: 28rpx;
  color: #cacaca;
}

.btn-area {
  margin-top: 12.5%;
  padding: 0 3.7%;
}
