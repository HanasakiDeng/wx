/**app.wxss**/

page {
  /* font-family: STSong, 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; */
  background-color: #f5f5f5;
}

/*小图标  */

.icon {
  width: 1rem;
  height: 1rem;
}

.icon-mid {
  width: 1.5rem;
  height: 1.5rem;
}

.logo {
  width: 4rem;
  height: 3rem;
}

.color-DDDDDD {
  color: #555A63;
}

.color-000 {
  color: #000;
}

.color-red {
  color: red;
}

.color-7C807F {
  color: #7e8281;
}

.color-fff {
  color: #fff;
}

.star-icon {
  width: 4.7833rem;
  height: 0.8833rem;
}

/*字体大小  */

.fs-20 {
  font-size: 1rem;
}

.fs-17 {
  font-size: 0.85;
}

.fs-16 {
  font-size: 0.8rem;
}

.fs-15 {
  font-size: 0.75rem;
}

.fs-14 {
  font-size: 0.7rem;
}

.fs-10 {
  font-size: 0.5rem;
}

.hover-color {
  color: rgba(0, 0, 0, 0.6);
}

/*弹框层  */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
