/* pages/reservation/reservation.wxss */


.page {
  padding: 0 1rem;
}

.content {
  margin-top: 1rem;
}

.card, .room-type-container {
  padding: 0.5rem 1rem;
  margin-bottom: 1rem;
  border-radius: 8px;
  background-color: #fff;
}

.card:before {
  content: "";
  position: relative;
  width: 4px;
  left: -1rem;
  background: orange;
}

.card >.card-item {
  display: flex;
  line-height: 2rem;
  border-top: 1px solid #e2e2e2;
  /* justify-content: flex-start;
  align-items: center; */
}

.card-item:first-child {
  border: none;
}

/* .card-item:first-of-type:before {
  content: "";
  position: relative;
  width: 4px;
  left: -1rem;
  background: orange;
} */

.card-item>.title {
  width: 30%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.card-item >.name {
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 2rem;
}
.card-item >.arrow {
  flex:1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  line-height: 2rem;
}

.picker {
  color: rgba(0, 0, 0, 0.8);
}

.room-type-title {
  line-height: 2rem;
  margin-bottom: 0.5rem;
  border-bottom: 1px dashed orange;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.room-type-item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: flex-start;
  align-items: flex-start;
  border-bottom: 1px dashed orange;
  margin-bottom: 0.5rem;
}

.room-type-item >.type-name {
  flex: 1;
  width: 4rem;
  height: 1.5rem;
  line-height: 1.5rem;
  background: orange;
  text-align: center;
  vertical-align: middle;
  color: #fff;
}

.room-type-item >.desc {
  height: 1.5rem;
  line-height: 1.5rem;
  margin-left: 0.2rem;
}

.room-type-item >.table-container {
}

.table {
  padding: 0.2rem 0.3rem;
  float: left;
  margin: 0.3rem 0.2rem;
  flex: 1;
  width: 4rem;
  height: 2rem;
  background: #78c257;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #fff;
  align-items: center;
}

/*桌号点击状态  */

.table-active {
  background: red;
}

/*底部  */

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 8vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #629aff;
  color: #fff;
}

.footer:active {
  background: rgba(98, 154, 255, 0.32);
}
