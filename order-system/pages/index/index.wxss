/* pages/index/index.wxss */
@import '../tpls/menu-modal/menu-modal.wxss';

.banner {
  height: 30vh;
}

swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.5);
}

swiper-item >image {
  width: 100%;
}

.content {
  /* margin: 1rem 1rem; */
  padding: 1rem 1rem;
}

/*信息列表  */

.list {
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 3px 3px 3px rgba(255, 255, 255, 0.32);
}

.nav {
  padding: 1rem 1rem;
  margin-bottom: 0.5rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid #e2e2e2;
}

/*餐厅简介  */

.introduction {
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.list-item {
  padding: 0rem 1rem;
  margin: 1rem auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.list-item >image {
  padding-bottom: 1rem;
}

.list-item >.desc {
  padding-bottom: 1rem;
  flex: 1;
  margin-left: 1rem;
  border-bottom: 1px solid #e2e2e2;
}

.menu {
  padding: 0.5rem 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 8vh;
  background: #fff;
  margin-bottom: 1rem;
}

.menu >.menu-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #e2e2e2;
}

.menu >.menu-item:last-child {
  border: none;
}
