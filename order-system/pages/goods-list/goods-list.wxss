/* pages/goods-list/goods-list.wxss */

.page {
  margin-top: 0.5rem;
}

/*显示桌号  */

.table-info {
  position: fixed;
  top: 1rem;
  right: 0;
  height: 2rem;
  line-height: 2rem;
  padding: 0.3rem 0.5rem;
  border-radius: 1rem 0 0 1rem;
  color: #fff;
  background: rgba(255, 48, 48, 1);
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  color: #fff;
}

.header .section {
  height: 18vh;
  line-height: 18vh;
  background: #629aff;
  text-align: center;
}

.header .tabbar {
  background: #fff;
  color: #000;
  display: flex;
  height: 2rem;
  justify-content: space-around;
  align-items: center;
}

.tabbar .bar-btn {
  line-height: 1.9rem;
}

.bar-btn.active {
  border-bottom: 2px solid #629aff;
  color: #629aff;
}

.content {
  margin-top: 25vh;
  background: #fff;
}

.menu {
  position: fixed;
  left: 0;
  top: 28vh;
  right: 0;
  width: 20%;
  /* box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.2); */
  background: #f3f3f3;
  line-height: 2rem;
}

.menu >.menu-item {
  text-align: center;
  border-top: 1px solid #e2e2e2;
}

.menu-item-active {
  border-left: 2px solid #0c96ed;
  background: #fff;
  color: #0c96ed;
}

.menu-item:first-child {
  border-top: none;
}

.goods-container {
  margin-left: 20%;
}

.list {
  background: #fff;
}

.list-title {
  background: #fff;
  padding: 0.2rem 0.3rem;
}

.list-item {
  padding: 0.5rem 1rem;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-top: 1px solid #e2e2e2;
}

.list-item:first-child {
  border-top: none;
}

.list-item >image {
  width: 4rem;
  height: 4rem;
}

.list-item >.item-info {
  flex: 1;
  margin-left: 0.5rem;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  line-height: 1.5rem;
}

.item-info >.name {
  font-weight: bold;
}

.item-info >.detail {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-content: flex-start;
  align-items: center;
}

.item-info >.goods-desc {
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.cart-oper {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.remove {
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 1.2rem;
  height: 1.2rem;
  border-radius: 0.6rem;
  border: 1px solid #0c96ed;
  color: #0c96ed;
  font-weight: bold;
}

.add {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 1.2rem;
  height: 1.2rem;
  border-radius: 0.6rem;
  background: #0c96ed;
  color: #fff;
  font-weight: bold;
}

.remove:active, .add:active {
  background: rgba(98, 154, 255, 0.32);
}

.count {
  margin: 0 0.3rem;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #44484b;
  height: 3rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer:before {
  content: '';
  position: position;
  bottom: 0.7rem;
  margin-top: -1rem;
  margin-left: 1rem;
  width: 3rem;
  height: 3rem;
  border-top-left-radius: 1.5rem;
  border-top-right-radius: 1.5rem;
  background: #44484b;
}

.footer >.cart {
  position: fixed;
  bottom: 0.8rem;
  margin-left: 1.25rem;
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 1.25rem;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart-on {
  background: #629aff;
}

.cart-off {
  background: #3c3c3c;
}

.badge {
  position: fixed;
  left: 3.4rem;
  bottom: 2.8rem;
  width: 1rem;
  height: 1rem;
  border-radius: 50%;
  color: #fff;
  background: red;
  display: flex;
  justify-content: center;
  align-items: center;
  text-overflow: ellipsis;
}

.footer >.btn {
  width: 35%;
  float: right;
  height: inherit;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.btn-default {
  background: #7c807f;
}

.btn-active {
  background: #36c971;
}

.btn-active:active {
  background: rgba(54, 201, 113, 0.32);
  color: rgba(255, 255, 0.32);
}

.footer >.price {
  margin-left: -5rem;
}
